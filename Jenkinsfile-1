pipeline {
  agent { 
      kubernetes {
            yaml '''
                apiVersion: v1
                kind: Pod
                spec:
                    containers:
                    - name: maven
                      image: maven:alpine
                      command:
                      - cat
                      tty: true
                '''
           }
	 }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage("maven clean") {
        steps{
               sh 'which mvn'
        	withSonarQubeEnv(installationName: 'SonarQube') { 
                sh 'mvn clean'
            }   
        }
    }
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'SonarQube') { 
          sh './mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar'
        }
      }
    }
  }
}
